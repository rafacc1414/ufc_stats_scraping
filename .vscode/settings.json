{
    /* TREE Configuration */
    "todo-tree.general.tags": ["TODO", "FIXME", "FANCY", "BUG"],
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "iconColour": "green",
            "icon": "log",
            "gutterIcon": true,
            "type": "line"
        },
        "FIXME": {
            "iconColour": "red",
            "gutterIcon": true,
            "icon": "tools"
        },
        "FANCY": {
            "iconColour": "green",
            "gutterIcon": true,
            "icon": "credit-card"
        },
        "WIP": {
            "iconColour": "gray",
            "type": "line",
            "icon": "zap"
        },
        "BUG": {
            "iconColour": "yellow",
            "gutterIcon": true,
            "icon": "bug"
        },
    },

    /* Vertical Ruler */
    "editor.rulers": [100,120],
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#ff0000"
    },
    "python.analysis.extraPaths": [
        "./src/db_utils"
    ]
}