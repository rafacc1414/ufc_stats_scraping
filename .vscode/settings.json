{
    /* TREE Configuration */
    "todo-tree.general.tags": ["TODO", "FIXME", "FANCY", "WIP", "BUG"],
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "iconColour": "green",
            "icon": "log",
            "gutterIcon": true,
            "type": "line"
        },
        "FIXME": {
            "iconColour": "red",
            "gutterIcon": true,
            "icon": "tools"
        },
        "FANCY": {
            "iconColour": "green",
            "gutterIcon": true,
            "icon": "credit-card"
        },
        "WIP": {
            "iconColour": "orange",
            "type": "line",
            "gutterIcon": true,
            "icon": "zap"
        },
        "BUG": {
            "iconColour": "yellow",
            "gutterIcon": true,
            "icon": "bug"
        },
    },

    /* Vertical Ruler */
    "editor.rulers": [100,120],
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#ff0000"
    },
    "python.analysis.extraPaths": [
        "./src/db_utils",
        "./ext_libs"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
            "editor.formatOnSave": true
    },
    "livePreview.defaultPreviewPath": "/reports/TestResults.html",
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./tests",
        "-p",
        "test_*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true
}